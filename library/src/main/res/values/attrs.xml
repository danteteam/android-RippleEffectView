<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RippleEffectView">
        <attr name="ripple_color" format="color"/>
        <attr name="ripple_animationDuration" format="integer"/>
        <attr name="ripple_clickDelay" format="integer"/>
        <attr name="ripple_softReverse" format="boolean"/>
        <attr name="ripple_enable" format="boolean"/>
        <attr name="ripple_moveToCenter" format="boolean"/>
        <attr name="ripple_radius" format="dimension|integer">
            <enum name="auto" value="1"/>
        </attr>
       <!-- <attr name="rippleShowFinger" format="boolean"/>
        <attr name="rippleFingerColor" format="color"/>
        <attr name="rippleFingerRadius" format="dimension"/>
        <attr name="rippleFingerWidth" format="dimension"/>-->
        <attr name="ripple_edgeType" format="enum">
            <enum name="soft" value="0"/>
            <enum name="strong" value="1"/>
        </attr>
        <attr name="ripple_fillColor" format="color"/>

        <attr name="ripple_style" format="enum">
            <enum name="android_bounded" value="1"/>
            <enum name="android_unbounded" value="2"/>
            <enum name="android_soft" value="3"/>
        </attr>
    </declare-styleable>


</resources>